{
  "name": "animated-funnel",
  "version": "1.0.6",
  "description": "An animated funnel component for e-commerce dashboards, with interactive stages, tooltips, and particle effects.",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/**/*",
    "src/styles/funnel.css"
  ],
  "scripts": {
    "build": "tsc && rollup -c",
    "postbuild": "mkdir -p dist/styles && cp src/styles/funnel.css dist/styles/funnel.css"
  },
  "keywords": [
    "funnel",
    "animation",
    "e-commerce",
    "dashboard",
    "interactive",
    "particle-effects",
    "tooltip",
    "svg"
  ],
  "author": "Shivam Sharma",
  "license": "MIT",
  "dependencies": {
    "tsparticles": "^3.7.1",
    "tsparticles-engine": "^2.12.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/estree": "^1.0.6",
    "@types/node": "^22.10.3",
    "postcss": "^8.4.49",
    "rollup": "^4.29.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  }
}
